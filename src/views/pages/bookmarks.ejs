<section class="bookmarks-section">
    <div class="container">
        <div class="section-header">
            <h2>Your Bookmarks</h2>
            <p>Products you've saved for later</p>
        </div>
        
        <div class="bookmarks-content">
            <% if (bookmarks && bookmarks.length > 0) { %>
                <div class="products-grid" id="bookmarksGrid">
                    <% bookmarks.forEach(function(product) { %>
                        <div class="product-card bookmarked" data-product-id="<%= product.id %>">
                            <div class="product-image-container">
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-img" />
                                <button class="bookmark-btn active" onclick="toggleBookmark(<%= product.id %>)">
                                    <span class="bookmark-icon">‚ù§Ô∏è</span>
                                </button>
                            </div>
                            
                            <div class="product-body">
                                <h3 class="product-name"><%= product.name %></h3>
                                <p class="product-price">$<%= product.price.toLocaleString() %></p>
                                
                                <div class="product-actions">
                                    <button class="btn btn-primary" onclick="buyNow(<%= product.id %>)">Hozir sotib olish</button>
                                    <button class="btn btn-outline" onclick="removeBookmark(<%= product.id %>)">Olib tashlash</button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">üîñ</div>
                    <h3>No bookmarks yet</h3>
                    <p>Start browsing and bookmark your favorite products!</p>
                    <a href="/" class="btn btn-primary">Browse Products</a>
                </div>
            <% } %>
        </div>
    </div>
</section>

<script src="/js/bookmarks.js"></script>
